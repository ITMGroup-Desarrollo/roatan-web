---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer/Footer.astro";
import Menu from "../../components/Headers/MenuBlog.astro";
import PolicyComponent from "../../components/policy/Policy.astro";
export const prerender = true;
export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}
const lang = Astro.params.lang || "es";
---

<Layout lang={lang}>  
  <Menu lang={lang} />
  <PolicyComponent lang={lang} />
  <Footer lang={lang} videoFile="fondo-footer-gris.mp4"/>
</Layout>
