---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Headers/HeaderBlog.astro";
import Footer from "../../components/Footer/Footer.astro";
import Menu from "../../components/Headers/Menu.astro";
import Contacto from "../../components/contact/Contact.astro"
import { translations } from "../../locales.js";
export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}
const lang = Astro.params.lang || "es";
const t = translations[lang] ?? translations["es"];
---

<Layout lang={lang}>  
  <Menu lang={lang} />
  <Header
    lang={lang}
    headerTitle={t.contact.title}
    headerUrl="header-contact.webp"
    id="headerContact-container"
  />
  <Contacto lang={lang}/>
  <Footer lang={lang} videoFile="fondo-footer-blanco.mp4"/>
  
</Layout>
