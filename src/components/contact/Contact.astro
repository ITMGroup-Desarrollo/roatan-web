---
// src/pages/contact.astro
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
const siteKey = "6Lc4uH0rAAAAAJkaECv7UEzKCp8NVUcgUrEXbPSK";
---

<section class="bg-[var(--redSocial-color)] py-12 mt-12 relative">
  <div
    class="title-container w-full text-center items-center flex flex-col z-15 pt-8"
  >
    <h2
      class="title md:block text-6xl md:text-8xl mb-6 md:mb-12 font-bebasBold text-[var(--primary-color)]"
    >
      {t.contact.title}
    </h2>
    <p
      class="subtitle text-xl md:text-3xl font-bebas text-black mb-6 md:mb-12 px-5 w-full lg:w-3/5"
    >
      {t.contact.subtitle}
    </p>
  </div>
  <form
    id="contact-form"
    class="lg:max-w-4xl xl:max-w-6xl mx-auto px-4 grid bg-transparent grid-cols-1 md:grid-cols-2 gap-4"
  >
    <input
      type="text"
      name="nombre"
      placeholder={t.contact.name}
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    />
    <input
      type="text"
      name="apellido"
      placeholder={t.contact.lastName}
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    />
    <input
      type="email"
      name="correo"
      placeholder={t.contact.email}
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    />
    <input
      type="tel"
      name="telefono"
      placeholder={t.contact.phone}
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    />
    <input
      type="text"
      name="country"
      placeholder={t.contact.country}
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    />
    <select
      name="naviera"
      required
      class="border-2 border-primary-color rounded-md px-4 py-3 w-full text-primary-color focus:outline-none"
    >
      <option value="" disabled selected hidden>{t.contact.ship}</option>
      <option value="msc">MSC</option>
      <option value="royal">Royal Caribbean</option>
      <option value="carnival">Carnival Cruise Lines</option>
      <option value="norwegian">Norwegian</option>
      <option value="virgin-voyages">Virgin Voyages</option>
    </select>
    <!-- <div>
      <label class="text-sm text-primary-color mb-1 block"
        >{t.contact.date}</label
      >
      <input
        type="date"
        name="fecha"
        required
        class="border-2 border-primary-color rounded-md px-4 py-3 w-full text-primary-color focus:outline-none"
      />
    </div> -->
    <textarea
      name="mensaje"
      rows="4"
      placeholder={t.contact.message}
      required
      class="md:col-span-2 border-2 border-primary-color rounded-md px-4 py-3 w-full placeholder-primary-color focus:outline-none"
    ></textarea>

    <!-- CAPTCHA -->
    <div class="md:col-span-2 flex justify-center mt-4">
      <div class="g-recaptcha" data-sitekey={siteKey}></div>
    </div>
    <div id="form-message" class="md:col-span-2"></div>
    <div class="md:col-span-2 flex justify-center mt-4">
      <button
        type="submit"
        class="font-bold md:my-8 font-bebas bg-[var(--primary-color)] text-white border-2 border-[var(--primary-color)] hover:bg-white hover:text-[var(--darkblue-color)] hover:border-2 hover:border-[var(--darkblue-color)] text-left text-xl xl:text-2xl xl:mx-3 w-fit uppercase py-2 px-4 xl:py-4 xl:px-8 rounded-xl overflow-hidden"
      >
        {t.contact.send}
      </button>
    </div>
  </form>
  <!-- Popup de agradecimiento -->
  <div
    id="thank-you-popup"
    class="popup hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50"
  >
    <div
      class="bg-white rounded-lg overflow-hidden text-center max-w-md w-full"
    >
      <!-- Parte superior con color y la imagen -->
      <div class="bg-secondary-color p-6">
        <img
          src="/src/assets/img/logo/thanks.png"
          alt="Success Icon"
          class="mx-auto w-28 h-28"
        />
      </div>
      <!-- Contenido del mensaje -->
      <div class="bg-[#F2F2F2] p-6">
        <h2 class="text-4xl font-bold text-primary-color mb-2">THANK YOU!</h2>
        <p class="text-primary-color mb-4">We have received your message</p>
        <button
          id="popup-back-btn"
          class="bg-primary-color text-white px-6 py-2 border-2 border-primary-color rounded hover:bg-white hover:text-primary-color hover:border-primary-color hover: transition"
        >
          BACK!
        </button>
      </div>
    </div>
  </div>

  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script is:inline>
    document
      .getElementById("contact-form")
      ?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const form = e.target;
        const formData = new FormData(form);

        const response = await fetch("/api/contact", {
          method: "POST",
          body: formData,
        });

        const result = await response.json();

        const messageBox = document.getElementById("form-message");
        messageBox.textContent = result.message;
        messageBox.className = result.success
          ? "md:col-span-2 text-green-600 mt-4 text-center"
          : "md:col-span-2 text-red-600 mt-4 text-center";

        if (result.success) {
          form.reset();
          grecaptcha.reset();
          document
            .getElementById("thank-you-popup")
            ?.classList.remove("hidden");
        }
      });

    // BotÃ³n BACK: cierra popup y redirige a home
    document.getElementById("popup-back-btn")?.addEventListener("click", () => {
      document.getElementById("thank-you-popup")?.classList.add("hidden");
      window.location.href = "/";
    });
  </script>
</section>
